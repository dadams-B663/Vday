    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Valentine site (with server)",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "Start static server"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Open Valentine site (file, no server)",
            "file": "${workspaceFolder}/index.html"
        }
    ]
}